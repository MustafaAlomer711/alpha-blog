<div id="page-content">
    <h1 class="text-center">Showing specific Article</h1>
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
           <div class="card text-center shadow mb-5 bg-white rounded">
              <div class="card-header">
                <p>by <%=link_to @article.user.username, user_path(@article.user) %></p>
              </div>
              <div class="card-body">
                  <div class="card-text text-start m-2">Description: <%= simple_format(@article.description) %></div>
                  <div class="container-button mb-4">
                    <% if logged_in? && @article.user == current_user || current_user.admin?  %>
                      <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-outline-info' %>
                      <%= link_to 'Delete', article_path(@article), data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"}, class: 'btn btn-outline-danger' %>
                    <% end %>
                      <%= link_to 'Back to Article listings ', articles_path, class: 'btn btn-outline-primary' %>
                  </div>
                  <div class="card-footer text-muted">
                  <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
                  edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
</div>
