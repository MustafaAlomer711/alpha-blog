<div id="page-content">
    <h1 class="text-center">Showing specific Article</h1>
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
           <div class="card text-center shadow mb-5 bg-white rounded">
              <div class="card-header">
                <p>Title: <%= @article.created_at %></p>
              </div>
              <div class="card-body">
                  <p>Title: <%= @article.title %></p>
                  <p>Description: <%= truncate(@article.description, length:100) %></p>
                  <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-info' %>
                  <%= link_to 'Delete', article_path(@article), data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"}, class: 'btn btn-danger' %>
                  <%= link_to 'Back to Article listings ', articles_path, class: 'btn btn-primary' %>
              </div>
            </div>
        </div>
      </div>
    </div>
</div>
