<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @category %>
      <%= form_with(scope: :category, url: categories_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mb-2">
          <%= f.label :name,"Category name",  class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Category name" %>
          </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit "Create Category", class: "btn btn-outline-light btn-sm" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to all categories ]', categories_path, class: "text-info text-center" %>
  </div>
</div>
